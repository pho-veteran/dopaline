generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  email             String      @unique
  name              String?
  image             String?     // Google profile picture URL
  emailVerified     DateTime?
  title             String      @default("Weakling")
  streak            Int         @default(0)
  lastCompletedDate DateTime?
  dailyLogs         DailyLog[]
  reflections       Reflection[]
  accounts          Account[]
  sessions          Session[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

model DailyLog {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  date          DateTime
  focusQuestId  String   @db.ObjectId
  focusDone     Boolean  @default(false)
  bodyDone      Boolean  @default(false)
  noNutDone     Boolean  @default(false)
  completed     Boolean  @default(false)  // True when all three quests are completed
  focusRerolled Boolean  @default(false)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String   @db.ObjectId
  createdAt     DateTime @default(now())
  
  @@unique([userId, date])
  @@index([userId, completed, date])
}

model Quest {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  type        String
  difficulty  String
  description String
  createdAt   DateTime   @default(now())
  
  @@index([type, difficulty])
}

model Reflection {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  content   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  
  @@unique([userId, date])
}
